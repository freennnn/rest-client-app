{
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "endOfLine": "auto",
  "printWidth": 100,
  "arrowParens": "always",
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "importOrder": [
    "^(react|react-[^/]+)$",
    "<THIRD_PARTY_MODULES>",
    "^[../.]",
    ".*\\.scss$",
    "^[./].*\\.scss$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
